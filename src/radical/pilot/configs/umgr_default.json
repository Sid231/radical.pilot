
# this is the default unit manager config which is used if no other config is
# specified.  It contains the minimal set of settings required for
# a functional unit manager.
{
    # default scheduler
    "scheduler" : "round_robin",

    # time to sleep between database polls (seconds)
    "db_poll_sleeptime" : 5.0,

    "bridges" : {
        "umgr_staging_input_queue"  : {"log_level" : "off",
                                       "stall_hwm" : 1,
                                       "bulk_size" : 1},
        "umgr_scheduling_queue"     : {"log_level" : "off",
                                       "stall_hwm" : 1,
                                       "bulk_size" : 1},
        "umgr_staging_output_queue" : {"log_level" : "off",
                                       "stall_hwm" : 1,
                                       "bulk_size" : 1},

        "umgr_unschedule_pubsub"    : {"log_level" : "off",
                                       "stall_hwm" : 1,
                                       "bulk_size" : 1},
        "umgr_reschedule_pubsub"    : {"log_level" : "off",
                                       "stall_hwm" : 1,
                                       "bulk_size" : 1}
    },

    "components" : {
        # how many instances of the respective components should be started
        "UMGRStagingInputComponent"  : 1,
        "UMGRSchedulingComponent"    : 1,
        "UMGRStagingOutputComponent" : 1
    }
}

